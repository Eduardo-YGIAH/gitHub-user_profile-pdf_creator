<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Verdana, Geneva, Tahoma, sans-serif;

        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 8.27in;
        height: 11.69in;
    }

    header {
        background: rgb(36, 102, 155);
        width: 100%;
        height: 33.33%;
    }

    header .header_card {
        width: 90%;
        margin: 0 auto;
        margin-top: 10%;
        padding-top: 160px;
        position: relative;
        border-radius: 6px;
        box-shadow: 2px 2px 10px darkgrey;

        background: darkblue;
    }

    header .avatar_container {
        width: 160px;
        height: 160px;
        position: absolute;
        top: -40px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 50%;
    }

    header .avatar_container img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
    }

    .greeting,
    .intro {
        text-align: center;
        color: white;
        padding-bottom: 10px;
        font-size: 28px;
    }

    .intro {
        font-size: 26px;
        font-weight: 200;
    }

    .job {
        font-size: 18px;
        font-weight: 100;
        text-align: center;
        color: white;
    }

    .links {
        display: flex;
        justify-content: center;
        padding: 20px 0;
    }

    .center {
        margin: 0 20px;
    }

    .links span {
        display: flex;
    }

    .links img {
        width: 16px;
        height: 16px;
        color: white;
    }

    .label {
        font-size: 12px;
        font-weight: 100;
        color: white;
        padding-left: 10px;
        text-decoration: none;

    }

    main {
        width: 100%;

        padding-top: 60px;
    }

    .bio {
        text-align: center;
        color: rgb(22, 20, 20);
        font-size: 24px;
        font-weight: 200;
    }

    .cards_container {
        display: flex;
        justify-content: space-around;
        margin: 30px auto;
    }

    .cards {
        width: 300px;
        padding: 18px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 6px;
        box-shadow: 2px 2px 10px lightgrey;
    }

    .cards h2,
    .cards p {
        color: white;
    }

    .cards h2 {
        padding: 10px 0;
    }

    footer {
        background: rgb(36, 102, 155);
        width: 100%;
        height: 33.33%;
        z-index: -1;
    }
</style>
<html>

<body>
    <header>
        <div class="header_card" style="background-color: {{ backgroundColor }};">
            <div class="avatar_container">
                <img src="{{ avatar }}" alt="profile picture">
            </div>
            <h2 class="greeting">Hi!</h2>
            {{#if name}}
            <h3 class="intro">My name is {{ name }}</h3>
            {{else}}
            <h3 class="intro">I rather keep my name to myself</h3>
            {{/if}}
            {{#if company}}
            <p class="job">I work @ {{ company }}</p>
            {{else}}
            <p class="job">Work place is such a boring topic...</p>
            {{/if}}
            <div class="links">
                <span>
                    {{#if location}}
                    <img src="{{ locationIcon }}" alt="Location icon">
                    <a class="label" href="https://www.google.com/maps/place/{{ location }}">{{ location }} </a>
                    {{else}} <img src="{{ locationIcon }}" alt="Location icon">
                    <p class="label">{{ location }}</p>
                    {{/if}}
                </span>
                <span class='center'>
                    {{#if gitHub}}
                    <img src="{{ gitHubIcon }}" alt="GitHub icon">
                    <a class="label" href="{{ gitHub }}">GitHub</a>
                    {{else}}
                    <img src="{{ gitHubIcon }}" alt="GitHub icon">
                    <p class="label">GitHub</p>
                    {{/if}}
                </span>
                <span>
                    {{#if blog}}
                    <img src="{{ blogIcon }}" alt="Blog icon">
                    <a class="label" href="{{ blog }}">Blog</a>
                    {{else}}
                    <img src="{{ blogIcon }}" alt="Blog icon">
                    <p class="label">Blog</p>
                    {{/if}}
                </span>
            </div>
        </div>
    </header>
    <main class="content">
        <h3 class="bio">{{ bio }}</h3>
        <div class="cards_container">
            <div class="cards" style="background-color: {{ backgroundColor }}">
                <h2>Public Repositories</h2>
                <p class="value">{{ publicRepos }}</p>
            </div>
            <div class="cards" style="background-color: {{ backgroundColor }}">
                <h2>Followers</h2>
                <p class="value">{{ followers }}</p>
            </div>
        </div>
        <div class="cards_container">
            <div class="cards" style="background-color: {{ backgroundColor }}">
                <h2>Following</h2>
                <p class="value">{{ following }}</p>
            </div>
            <div class="cards" style="background-color: {{ backgroundColor }}">
                <h2>Git Hub Stars</h2>
                <p class="value">{{ stars }}</p>
            </div>
        </div>
    </main>
    <footer class="footer"></footer>
</body>

</html>